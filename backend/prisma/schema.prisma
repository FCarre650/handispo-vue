generator client {
  provider = "prisma-client-js"
}


model association {
  id              Int       @default(autoincrement()) @id
  name            String
  location        String
  address         String
  postalCode      String
  city            String
  phone           String
  email           String
  website         String?
  license         String

  sports          sport[]   

}

model sport {

  id              Int          @id @default(autoincrement())
  nom             String

  handicaps       handicap[]    
  associations    association[]
  couples         couple[] 

}

model handicap {

  id              Int       @id @default(autoincrement())
  nom             String

  sports          sport[]  
  couples         couple[]

}

model couple {
   id             Int       @id @default(autoincrement())

   handicaps      handicap[]
   sports         sport[]
}

datasource db {
   provider = "sqlite"
   url      = env("DATABASE_URL")
}
